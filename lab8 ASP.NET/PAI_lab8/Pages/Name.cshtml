@page
@{
    var name = Request.Query["name"].ToString();
    if (string.IsNullOrEmpty(name))
    {
        name = "Robert Paulson";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Name Page</title>
</head>
<body>
    <ul>
        @for (int i = 0; i < 10; i++)
        {
            <li>His name is @name</li>
        }
    </ul>
</body>
</html>
